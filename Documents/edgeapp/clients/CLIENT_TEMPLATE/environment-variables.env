# [CLIENT_NAME] - Production Environment Variables
# Apply these EXACTLY in Vercel Project Settings → Environment Variables

# Supabase Configuration (CRITICAL: Use exact REACT_APP_ prefix)
REACT_APP_SUPABASE_URL=https://[PROJECT_REF].supabase.co
REACT_APP_SUPABASE_ANON_KEY=[GET_FROM_SUPABASE_PROJECT_SETTINGS_API]

# Client Configuration  
REACT_APP_TENANT_ID=[CLIENT_TENANT_ID]
REACT_APP_CLIENT_NAME=[CLIENT_NAME]
REACT_APP_ENV=production

# Optional: Admin Configuration
REACT_APP_ADMIN_EMAIL=[CLIENT_ADMIN_EMAIL]

