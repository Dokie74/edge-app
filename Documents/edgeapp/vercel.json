{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@20"
    },
    "api/**/*.js": {
      "runtime": "@vercel/node@20"
    },
    "api/**/*.mjs": {
      "runtime": "@vercel/node@20"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}